{
  "$pkg": "2211.5.0",
  "$schema": "https://json.schemastore.org/package",
  "$help": "https://docs.npmjs.com/cli/configuring-npm/package-json",
  "name": "@scoping/functions",
  "version": "0.2.7",
  "repository": "github:jimmy-zhening-luo/functions",
  "description": "My Azure Functions for scheduled automations",
  "keywords": [],
  "license": "MIT",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": "^22",
    "npm": "^10 || ^11"
  },
  "type": "module",
  "dependencies": {
    "@azure/functions": "4.8.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "chai": "^6.0.1",
    "linted": "~31.2.7",
    "mocha": "^11.7.2",
    "typescript": "^5.9.2"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "cmd --% /c \"(if exist dist rmdir /s /q dist) & (if exist .eslintcache del /f /q .eslintcache)\" || rm -rf dist .eslintcache",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run lint || echo \"Lint failed. Continuing...\"",
    "lint": "eslint --cache --fix",
    "pretest": "npm run build",
    "test": "npm run --if-present test:mocha",
    "test:mocha": "mocha",
    "prestart": "npm run --ignore-scripts build",
    "start": "node .",
    "predeploy": "npm test",
    "deploy": "npm ci --omit dev"
  },
  "author": "Jimmy Zhening Luo <jimmy-zhening-luo@users.noreply.github.com> (https://jimm.my/)"
}
